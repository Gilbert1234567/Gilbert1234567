#include <stdio.h>

 main() {
    struct stud {
        char name[25];
        char grade [25];
        int age;
    } x;
        printf("\nEnter the Student Name: ");
        scanf("%s", x.name);
        printf("Enter the Student Grade: ");
        scanf("%s", x.grade);
        printf("Enter the Student Age: ");
